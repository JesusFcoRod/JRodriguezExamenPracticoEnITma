@model ML.Producto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos Existentes</h2>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<br />
<br />

<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td style="text-align:center">Editar</td>
            <td style="display :none;">id</td>
            <td style="text-align:center">Descripcion</td>
            <td style="text-align:center">Usuario</td>
            <td style="text-align:center">Fecha de Creacion</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Producto producto in Model.Productos)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("Form", "Producto", new { IdProducto = producto.IdProducto})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@producto.IdProducto </td>
                <td style="text-align:center">@producto.Descripcion</td>
                <td style="text-align:center">@producto.IdUsuario</td>
                <td style="text-align:center">@producto.FechaCreacion</td>

            </tr>
        }

    </tbody>
</table>
